import { Pipe, PipeTransform } from '@angular/core';
import { Document } from '@appwrite/common';
import { AppwriteDocumentsService } from '../services';

@Pipe({
  name: 'contentPipe',
})
export class AppwriteContentPipe implements PipeTransform {
  constructor(private documentsService: AppwriteDocumentsService) {}

  transform<T = any>(id: string | string[] = [], collectionId: string): Promise<Document<T>[]> {
    return Promise.all([].concat(id).map((i) => this.documentsService.getDocument<T>(collectionId, i)));
  }
}
